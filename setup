# Stages
# TODO: use this site:
#       https://www.senate.gov/legislative/KeytoVersionsofPrintedLegislation.htm
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS stage (id INTEGER PRIMARY KEY, desc TEXT UNIQUE);" 

# Contributors
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS contributor (id INTEGER PRIMARY KEY, billId INTEGER, congressmanId INTEGER);" 

# Amounts
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS gpt_amts (id INTEGER PRIMARY KEY, amt INTEGER, purpose TEXT, whom TEXT)";
