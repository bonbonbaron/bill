#!/bin/bash

# Database 
dbFile="${HOME}/new.db" 

# Create a table called 'users' with two columns: 'id' and 'name' 
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS bill (id INTEGER PRIMARY KEY, name TEXT UNIQUE, desc TEXT, nUpdates INTEGER, nPages INTEGER, stageId INTEGER, filepath TEXT);" 

# Congressmen
sqlite3 "$dbFile" "DROP TABLE IF EXISTS congressman" 
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS congressman (bioguide TEXT PRIMARY KEY, lname TEXT, fname TEXT, party TEXT, stateId INTEGER);" 

# States
sqlite3 "$dbFile" "CREATE TABLE IF NOT EXISTS state (id INTEGER PRIMARY KEY, desc TEXT UNIQUE);" 
sqlite3 "$dbFile" "insert into state (desc) values ('AL');"
sqlite3 "$dbFile" "insert into state (desc) values ('AK');"
sqlite3 "$dbFile" "insert into state (desc) values ('AZ');"
sqlite3 "$dbFile" "insert into state (desc) values ('AR');"
