sqlite3 "$dbFile" "insert into state (desc) values ('MA');"
sqlite3 "$dbFile" "insert into state (desc) values ('MI');"
sqlite3 "$dbFile" "insert into state (desc) values ('MN');"
sqlite3 "$dbFile" "insert into state (desc) values ('MS');"
sqlite3 "$dbFile" "insert into state (desc) values ('MO');"
sqlite3 "$dbFile" "insert into state (desc) values ('MT');"
