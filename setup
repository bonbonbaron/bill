sqlite3 "$dbFile" "insert into state (desc) values ('SD');"
sqlite3 "$dbFile" "insert into state (desc) values ('TN');"
sqlite3 "$dbFile" "insert into state (desc) values ('TX');"
sqlite3 "$dbFile" "insert into state (desc) values ('UT');"
sqlite3 "$dbFile" "insert into state (desc) values ('VT');"
sqlite3 "$dbFile" "insert into state (desc) values ('VA');"
