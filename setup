sqlite3 "$dbFile" "insert into state (desc) values ('CT');"
sqlite3 "$dbFile" "insert into state (desc) values ('DE');"
sqlite3 "$dbFile" "insert into state (desc) values ('FL');"
sqlite3 "$dbFile" "insert into state (desc) values ('GA');"
